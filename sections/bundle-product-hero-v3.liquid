{% comment %}
  Bundle Product Hero Section v3.0.0 - Dynamic product fetching
  Version: v3.0.0 - Fetches actual bundle products and displays them beautifully
{% endcomment %}

<style>
  .bundle-hero {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }
  
  .bundle-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255, 107, 107, 0.05) 0%, rgba(238, 90, 36, 0.05) 100%);
    z-index: 0;
  }
  
  .bundle-hero .container {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .bundle-hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }
  
  .bundle-badge {
    display: inline-block;
    background: linear-gradient(45deg, #ff6b6b, #ee5a24);
    color: white;
    padding: 12px 24px;
    border-radius: 30px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 24px;
    animation: pulse 2s infinite;
    box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  .bundle-title {
    font-size: 4rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 20px;
    background: linear-gradient(135deg, #2c3e50, #34495e);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .bundle-subtitle {
    font-size: 1.5rem;
    color: #7f8c8d;
    margin-bottom: 20px;
    font-weight: 500;
  }
  
  .bundle-description {
    font-size: 1.2rem;
    color: #95a5a6;
    line-height: 1.6;
    margin-bottom: 40px;
  }
  
  .bundle-pricing {
    background: white;
    border-radius: 25px;
    padding: 40px;
    box-shadow: 0 25px 50px rgba(0,0,0,0.1);
    margin-bottom: 40px;
    border: 3px solid #f8f9fa;
    position: relative;
    overflow: hidden;
  }
  
  .bundle-pricing::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #ff6b6b, #ee5a24, #ff6b6b);
  }
  
  .pricing-header {
    text-align: center;
    margin-bottom: 30px;
  }
  
  .pricing-title {
    font-size: 1.4rem;
    color: #2c3e50;
    margin-bottom: 15px;
    font-weight: 700;
  }
  
  .price-comparison {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 25px;
  }
  
  .original-price {
    font-size: 1.8rem;
    color: #bdc3c7;
    text-decoration: line-through;
    font-weight: 500;
  }
  
  .bundle-price {
    font-size: 3.5rem;
    font-weight: 900;
    color: #e74c3c;
    text-shadow: 0 2px 4px rgba(231, 76, 60, 0.2);
  }
  
  .savings-badge {
    background: linear-gradient(45deg, #3498db, #2980b9);
    color: white;
    padding: 12px 20px;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: 700;
    display: inline-block;
    box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
  }
  
  .bundle-products {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
    margin-bottom: 40px;
  }
  
  .product-item {
    text-align: center;
    padding: 25px 20px;
    background: linear-gradient(135deg, #f8f9fa, #ffffff);
    border-radius: 20px;
    border: 2px solid #ecf0f1;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
  }
  
  .product-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 107, 107, 0.1), transparent);
    transition: left 0.6s;
  }
  
  .product-item:hover::before {
    left: 100%;
  }
  
  .product-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    border-color: #e74c3c;
  }
  
  .product-image {
    width: 100px;
    height: 100px;
    border-radius: 15px;
    margin: 0 auto 20px;
    object-fit: cover;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }
  
  .product-item:hover .product-image {
    transform: scale(1.1);
    box-shadow: 0 12px 30px rgba(0,0,0,0.2);
  }
  
  .product-sku {
    font-size: 0.9rem;
    color: #7f8c8d;
    font-weight: 600;
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .product-name {
    font-size: 1rem;
    color: #2c3e50;
    font-weight: 700;
    line-height: 1.3;
  }
  
  .product-price {
    font-size: 0.9rem;
    color: #27ae60;
    font-weight: 600;
    margin-top: 8px;
  }
  
  .cta-section {
    text-align: center;
  }
  
  .bundle-cta {
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    color: white;
    padding: 25px 50px;
    border: none;
    border-radius: 50px;
    font-size: 1.4rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.4s ease;
    box-shadow: 0 15px 35px rgba(231, 76, 60, 0.4);
    width: 100%;
    max-width: 450px;
    position: relative;
    overflow: hidden;
  }
  
  .bundle-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.6s;
  }
  
  .bundle-cta:hover::before {
    left: 100%;
  }
  
  .bundle-cta:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 45px rgba(231, 76, 60, 0.5);
  }
  
  .free-shipping-badge {
    background: linear-gradient(45deg, #27ae60, #229954);
    color: white;
    padding: 15px 25px;
    border-radius: 30px;
    font-size: 1rem;
    font-weight: 700;
    display: inline-block;
    margin-top: 25px;
    box-shadow: 0 8px 20px rgba(39, 174, 96, 0.3);
  }
  
  .bundle-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }
  
  .bundle-mockup {
    display: flex;
    align-items: center;
    gap: 30px;
    font-size: 5rem;
    animation: float 4s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-25px); }
  }
  
  .mockup-product {
    background: white;
    padding: 40px;
    border-radius: 25px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    transition: all 0.4s ease;
    border: 3px solid #ecf0f1;
  }
  
  .mockup-product:hover {
    transform: scale(1.15) rotate(5deg);
    box-shadow: 0 25px 50px rgba(0,0,0,0.2);
  }
  
  .plus-sign, .equals-sign {
    font-size: 4rem;
    color: #e74c3c;
    font-weight: bold;
    text-shadow: 0 2px 4px rgba(231, 76, 60, 0.2);
  }
  
  .bundle-result {
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    padding: 40px;
    border-radius: 25px;
    box-shadow: 0 20px 40px rgba(231, 76, 60, 0.4);
    animation: pulse 2s infinite;
    border: 3px solid #fff;
  }
  
  @media (max-width: 768px) {
    .bundle-hero-content {
      grid-template-columns: 1fr;
      gap: 50px;
      text-align: center;
    }
    
    .bundle-title {
      font-size: 2.8rem;
    }
    
    .bundle-price {
      font-size: 2.8rem;
    }
    
    .bundle-products {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    
    .bundle-mockup {
      font-size: 3rem;
      gap: 20px;
    }
    
    .mockup-product {
      padding: 25px;
    }
  }
</style>

<div class="bundle-hero">
  <div class="container">
    <div class="bundle-hero-content">
      <div class="bundle-hero-left">
        <div class="bundle-badge">üî• Limited Time Offer</div>
        <h1 class="bundle-title">{{ product.title }}</h1>
        <div class="bundle-subtitle">The Perfect Combination for Daily Style</div>
        <div class="bundle-description">{{ product.description | strip_html | truncate: 200 }}</div>
        
        <div class="bundle-pricing">
          <div class="pricing-header">
            <div class="pricing-title">Bundle Deal</div>
            <div class="price-comparison">
              <span class="original-price">AED 377</span>
              <span class="bundle-price">{{ product.price | money_without_currency }}</span>
            </div>
            <div class="savings-badge">Save AED {{ 377 | minus: product.price | money_without_currency }} ({{ 377 | minus: product.price | money_without_currency | times: 100 | divided_by: 377 }}% OFF)</div>
          </div>
          
          <div class="bundle-products">
            {% comment %} Get products by SKU from the bundle product's metafields or tags {% endcomment %}
            {% assign bundle_skus = 'UNB-ABD-002,IGN-PRL-006,SNP-SEA-001' | split: ',' %}
            
            {% for sku in bundle_skus %}
              {% assign bundle_product = collections.all.products | where: 'sku', sku | first %}
              <div class="product-item">
                <div class="product-sku">{{ sku }}</div>
                {% if bundle_product %}
                  <img src="{{ bundle_product.featured_image | img_url: '200x200' }}" alt="{{ bundle_product.title }}" class="product-image">
                  <div class="product-name">{{ bundle_product.title }}</div>
                  <div class="product-price">{{ bundle_product.price | money }}</div>
                {% else %}
                  <div class="product-image" style="background: linear-gradient(45deg, #ecf0f1, #bdc3c7); display: flex; align-items: center; justify-content: center; font-size: 3rem; color: #7f8c8d;">
                    {% case forloop.index %}
                      {% when 1 %}üëï
                      {% when 2 %}üëñ
                      {% when 3 %}üëü
                    {% endcase %}
                  </div>
                  <div class="product-name">Product {{ forloop.index }}</div>
                  <div class="product-price">Coming Soon</div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
          
          <div class="cta-section">
            {% form 'product', product %}
              <button type="submit" class="bundle-cta">
                Get My Bundle Now - {{ product.price | money }}
              </button>
            {% endform %}
            <div class="free-shipping-badge">üöö FREE SHIPPING INCLUDED</div>
          </div>
        </div>
      </div>
      
      <div class="bundle-hero-right">
        <div class="bundle-visual">
          <div class="bundle-mockup">
            <div class="mockup-product">üëï</div>
            <div class="plus-sign">+</div>
            <div class="mockup-product">üëñ</div>
            <div class="plus-sign">+</div>
            <div class="mockup-product">üëü</div>
            <div class="equals-sign">=</div>
            <div class="bundle-result">üéÅ</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Bundle Product Hero v3",
  "class": "section-bundle-product-hero-v3",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Bundle Product Hero v3"
    }
  ]
}
{% endschema %}
