  "name": "Bundle FAQ",
  "class": "section-bundle-faq",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Everything you need to know about your bundle"
    }
  ],
  "blocks": [
