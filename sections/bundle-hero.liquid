{% comment %}
  Bundle Hero Section - High-converting bundle page hero
{% endcomment %}

<style>
  .bundle-hero {
    background: linear-gradient(135deg, {{ section.settings.background_color }} 0%, #ffffff 100%);
    padding: 60px 0;
    position: relative;
    overflow: hidden;
  }
  
  .bundle-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('{{ section.settings.background_image | img_url: '1920x1080' }}') center/cover;
    opacity: 0.1;
    z-index: 0;
  }
  
  .bundle-hero .container {
    position: relative;
    z-index: 1;
  }
  
  .bundle-hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .bundle-hero-left {
    padding: 40px 0;
  }
  
  .bundle-badge {
    display: inline-block;
    background: linear-gradient(45deg, #ff6b6b, #ee5a24);
    color: white;
    padding: 8px 20px;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 20px;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  .bundle-title {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 20px;
    background: linear-gradient(135deg, #333, #666);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .bundle-subtitle {
    font-size: 1.4rem;
    color: #666;
    margin-bottom: 15px;
    font-weight: 500;
  }
  
  .bundle-description {
    font-size: 1.1rem;
    color: #777;
    line-height: 1.6;
    margin-bottom: 30px;
  }
  
  .bundle-pricing {
    background: white;
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    margin-bottom: 30px;
    border: 2px solid #f0f0f0;
  }
  
  .pricing-header {
    text-align: center;
    margin-bottom: 25px;
  }
  
  .pricing-title {
    font-size: 1.2rem;
    color: #333;
    margin-bottom: 10px;
    font-weight: 600;
  }
  
  .price-comparison {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
  }
  
  .original-price {
    font-size: 1.5rem;
    color: #999;
    text-decoration: line-through;
  }
  
  .bundle-price {
    font-size: 3rem;
    font-weight: 800;
    color: #ff6b6b;
  }
  
  .currency {
    font-size: 1.5rem;
    color: #666;
  }
  
  .savings-badge {
    background: linear-gradient(45deg, #00d2ff, #3a7bd5);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    display: inline-block;
  }
  
  .bundle-products {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-bottom: 30px;
  }
  
  .product-item {
    text-align: center;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 15px;
    border: 2px solid #e9ecef;
    transition: all 0.3s ease;
  }
  
  .product-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    border-color: #ff6b6b;
  }
  
  .product-sku {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
    margin-bottom: 10px;
  }
  
  .product-placeholder {
    width: 80px;
    height: 80px;
    background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
    border-radius: 10px;
    margin: 0 auto 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
  }
  
  .cta-section {
    text-align: center;
  }
  
  .bundle-cta {
    background: linear-gradient(45deg, #ff6b6b, #ee5a24);
    color: white;
    padding: 20px 40px;
    border: none;
    border-radius: 50px;
    font-size: 1.3rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
    width: 100%;
    max-width: 400px;
  }
  
  .bundle-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(255, 107, 107, 0.4);
  }
  
  .urgency-timer {
    background: linear-gradient(45deg, #ff4757, #ff3838);
    color: white;
    padding: 20px;
    border-radius: 15px;
    text-align: center;
    margin-bottom: 30px;
    animation: glow 2s ease-in-out infinite alternate;
  }
  
  @keyframes glow {
    from { box-shadow: 0 0 20px rgba(255, 71, 87, 0.5); }
    to { box-shadow: 0 0 30px rgba(255, 71, 87, 0.8); }
  }
  
  .timer-text {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 15px;
  }
  
  .countdown {
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  
  .countdown-item {
    text-align: center;
  }
  
  .countdown-number {
    font-size: 2rem;
    font-weight: 800;
    display: block;
  }
  
  .countdown-label {
    font-size: 0.8rem;
    opacity: 0.8;
  }
  
  .social-proof {
    background: white;
    padding: 25px;
    border-radius: 15px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    text-align: center;
    border-left: 4px solid #ff6b6b;
  }
  
  .testimonial-text {
    font-size: 1.1rem;
    font-style: italic;
    color: #555;
    margin-bottom: 15px;
    line-height: 1.5;
  }
  
  .customer-name {
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
  }
  
  .rating {
    color: #ffd700;
    font-size: 1.2rem;
    margin-bottom: 5px;
  }
  
  .review-count {
    font-size: 0.9rem;
    color: #666;
  }
  
  .free-shipping-badge {
    background: linear-gradient(45deg, #00d2ff, #3a7bd5);
    color: white;
    padding: 10px 20px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    display: inline-block;
    margin-top: 20px;
  }
  
  @media (max-width: 768px) {
    .bundle-hero-content {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }
    
    .bundle-title {
      font-size: 2.5rem;
    }
    
    .bundle-price {
      font-size: 2.5rem;
    }
    
    .bundle-products {
      grid-template-columns: 1fr;
    }
    
    .countdown {
      gap: 15px;
    }
    
    .countdown-number {
      font-size: 1.5rem;
    }
  }
</style>

<div class="bundle-hero">
  <div class="container">
    <div class="bundle-hero-content">
      <div class="bundle-hero-left">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'bundle_title' %}
              <div class="bundle-badge">🔥 Limited Time Offer</div>
              <h1 class="bundle-title">{{ block.settings.title }}</h1>
              <div class="bundle-subtitle">{{ block.settings.subtitle }}</div>
              <div class="bundle-description">{{ block.settings.description }}</div>
              
            {% when 'bundle_products' %}
              <div class="bundle-pricing">
                <div class="pricing-header">
                  <div class="pricing-title">Bundle Deal</div>
                  <div class="price-comparison">
                    <span class="original-price">{{ block.settings.currency }}{{ block.settings.msrp_price }}</span>
                    <span class="bundle-price">{{ block.settings.currency }}{{ block.settings.bundle_price }}</span>
                  </div>
                  <div class="savings-badge">Save {{ block.settings.currency }}{{ block.settings.msrp_price | minus: block.settings.bundle_price }} ({{ block.settings.msrp_price | minus: block.settings.bundle_price | times: 100 | divided_by: block.settings.msrp_price }}% OFF)</div>
                </div>
                
                <div class="bundle-products">
                  <div class="product-item">
                    <div class="product-sku">{{ block.settings.product_1_sku }}</div>
                    <div class="product-placeholder">👕</div>
                    <div class="product-name">Premium Item 1</div>
                  </div>
                  <div class="product-item">
                    <div class="product-sku">{{ block.settings.product_2_sku }}</div>
                    <div class="product-placeholder">👖</div>
                    <div class="product-name">Premium Item 2</div>
                  </div>
                  <div class="product-item">
                    <div class="product-sku">{{ block.settings.product_3_sku }}</div>
                    <div class="product-placeholder">👟</div>
                    <div class="product-name">Premium Item 3</div>
                  </div>
                </div>
                
                <div class="cta-section">
                  <button class="bundle-cta" onclick="addBundleToCart()">
                    Get My Bundle Now - {{ block.settings.currency }}{{ block.settings.bundle_price }}
                  </button>
                  <div class="free-shipping-badge">🚚 FREE SHIPPING INCLUDED</div>
                </div>
              </div>
              
            {% when 'urgency_timer' %}
              <div class="urgency-timer">
                <div class="timer-text">{{ block.settings.urgency_text }}</div>
                <div class="countdown" data-end-date="{{ block.settings.end_date }}" data-end-time="{{ block.settings.end_time }}">
                  <div class="countdown-item">
                    <span class="countdown-number" data-days>00</span>
                    <span class="countdown-label">Days</span>
                  </div>
                  <div class="countdown-item">
                    <span class="countdown-number" data-hours>00</span>
                    <span class="countdown-label">Hours</span>
                  </div>
                  <div class="countdown-item">
                    <span class="countdown-number" data-minutes>00</span>
                    <span class="countdown-label">Minutes</span>
                  </div>
                  <div class="countdown-item">
                    <span class="countdown-number" data-seconds>00</span>
                    <span class="countdown-label">Seconds</span>
                  </div>
                </div>
              </div>
              
            {% when 'social_proof' %}
              <div class="social-proof">
                <div class="testimonial-text">"{{ block.settings.testimonial_text }}"</div>
                <div class="customer-name">- {{ block.settings.customer_name }}</div>
                <div class="rating">★★★★★</div>
                <div class="review-count">{{ block.settings.review_count }} happy customers</div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
      
      <div class="bundle-hero-right">
        <div class="bundle-visual">
          <div class="bundle-mockup">
            <div class="mockup-product mockup-1">👕</div>
            <div class="mockup-product mockup-2">👖</div>
            <div class="mockup-product mockup-3">👟</div>
            <div class="plus-sign">+</div>
            <div class="equals-sign">=</div>
            <div class="bundle-result">🎁</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .bundle-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }
  
  .bundle-mockup {
    display: flex;
    align-items: center;
    gap: 20px;
    font-size: 4rem;
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
  
  .mockup-product {
    background: white;
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }
  
  .mockup-product:hover {
    transform: scale(1.1);
  }
  
  .plus-sign, .equals-sign {
    font-size: 3rem;
    color: #ff6b6b;
    font-weight: bold;
  }
  
  .bundle-result {
    background: linear-gradient(45deg, #ff6b6b, #ee5a24);
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 15px 35px rgba(255, 107, 107, 0.3);
    animation: pulse 2s infinite;
  }
  
  @media (max-width: 768px) {
    .bundle-mockup {
      font-size: 2.5rem;
      gap: 15px;
    }
    
    .mockup-product {
      padding: 20px;
    }
  }
</style>

<script>
  function addBundleToCart() {
    // Add bundle products to cart
    const bundleProducts = [
      '{{ section.blocks.bundle_products.settings.product_1_sku }}',
      '{{ section.blocks.bundle_products.settings.product_2_sku }}',
      '{{ section.blocks.bundle_products.settings.product_3_sku }}'
    ];
    
    // This would integrate with your cart system
    console.log('Adding bundle to cart:', bundleProducts);
    
    // Show success message
    alert('Bundle added to cart! Redirecting to checkout...');
  }
  
  // Countdown timer functionality
  document.addEventListener('DOMContentLoaded', function() {
    const countdownElement = document.querySelector('.countdown');
    if (countdownElement) {
      const endDate = countdownElement.dataset.endDate;
      const endTime = countdownElement.dataset.endTime;
      const endDateTime = new Date(endDate + ' ' + endTime).getTime();
      
      function updateCountdown() {
        const now = new Date().getTime();
        const distance = endDateTime - now;
        
        if (distance < 0) {
          countdownElement.innerHTML = '<div class="timer-text">Offer Expired!</div>';
          return;
        }
        
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);
        
        countdownElement.querySelector('[data-days]').textContent = String(days).padStart(2, '0');
        countdownElement.querySelector('[data-hours]').textContent = String(hours).padStart(2, '0');
        countdownElement.querySelector('[data-minutes]').textContent = String(minutes).padStart(2, '0');
        countdownElement.querySelector('[data-seconds]').textContent = String(seconds).padStart(2, '0');
      }
      
      updateCountdown();
      setInterval(updateCountdown, 1000);
    }
  });
</script>

