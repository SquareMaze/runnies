{% comment %}
  Bundle Product Hero Section v5.0.0 - PROPER bundle product access
  Version: v5.0.0 - Actually fetches the real bundle products, no more placeholder icons!
{% endcomment %}

<style>
  .bundle-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 100px 0;
    position: relative;
    overflow: hidden;
    color: white;
  }
  
  .bundle-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    opacity: 0.3;
  }
  
  .bundle-hero .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }
  
  .bundle-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .bundle-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 15px 30px;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  .bundle-title {
    font-size: 5rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 30px;
    text-shadow: 0 4px 8px rgba(0,0,0,0.3);
  }
  
  .bundle-subtitle {
    font-size: 1.8rem;
    margin-bottom: 30px;
    opacity: 0.9;
    font-weight: 300;
  }
  
  .bundle-description {
    font-size: 1.3rem;
    line-height: 1.6;
    margin-bottom: 50px;
    opacity: 0.8;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .bundle-products-section {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 30px;
    padding: 50px;
    margin-bottom: 50px;
    backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 50px;
  }
  
  .product-card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 25px;
    padding: 30px;
    text-align: center;
    transition: all 0.4s ease;
    border: 3px solid transparent;
    position: relative;
    overflow: hidden;
  }
  
  .product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
    transition: left 0.6s;
  }
  
  .product-card:hover::before {
    left: 100%;
  }
  
  .product-card:hover {
    transform: translateY(-15px) scale(1.02);
    box-shadow: 0 30px 60px rgba(0,0,0,0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }
  
  .product-image {
    width: 120px;
    height: 120px;
    border-radius: 20px;
    margin: 0 auto 25px;
    object-fit: cover;
    box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
  }
  
  .product-card:hover .product-image {
    transform: scale(1.1);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
  }
  
  .product-name {
    font-size: 1.3rem;
    color: #2c3e50;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.3;
  }
  
  .product-price {
    font-size: 1.1rem;
    color: #27ae60;
    font-weight: 600;
    margin-bottom: 10px;
  }
  
  .product-sku {
    font-size: 0.9rem;
    color: #7f8c8d;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .pricing-section {
    text-align: center;
    margin-bottom: 50px;
  }
  
  .price-comparison {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }
  
  .original-price {
    font-size: 2.5rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: line-through;
    font-weight: 300;
  }
  
  .bundle-price {
    font-size: 4rem;
    font-weight: 900;
    color: white;
    text-shadow: 0 4px 8px rgba(0,0,0,0.3);
  }
  
  .savings-badge {
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    color: white;
    padding: 20px 40px;
    border-radius: 50px;
    font-size: 1.2rem;
    font-weight: 700;
    display: inline-block;
    box-shadow: 0 10px 30px rgba(231, 76, 60, 0.4);
    margin-bottom: 40px;
  }
  
  .cta-section {
    text-align: center;
  }
  
  .bundle-cta {
    background: linear-gradient(45deg, #f39c12, #e67e22);
    color: white;
    padding: 30px 60px;
    border: none;
    border-radius: 60px;
    font-size: 1.6rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    cursor: pointer;
    transition: all 0.4s ease;
    box-shadow: 0 20px 40px rgba(243, 156, 18, 0.4);
    position: relative;
    overflow: hidden;
  }
  
  .bundle-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.6s;
  }
  
  .bundle-cta:hover::before {
    left: 100%;
  }
  
  .bundle-cta:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px rgba(243, 156, 18, 0.6);
  }
  
  .free-shipping-badge {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 20px 30px;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 700;
    display: inline-block;
    margin-top: 30px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
  }
  
  @media (max-width: 768px) {
    .bundle-hero {
      padding: 60px 0;
    }
    
    .bundle-title {
      font-size: 3rem;
    }
    
    .bundle-subtitle {
      font-size: 1.4rem;
    }
    
    .bundle-description {
      font-size: 1.1rem;
    }
    
    .products-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .bundle-price {
      font-size: 3rem;
    }
    
    .original-price {
      font-size: 2rem;
    }
    
    .bundle-cta {
      padding: 25px 40px;
      font-size: 1.3rem;
    }
  }
</style>

<div class="bundle-hero">
  <div class="container">
    <div class="bundle-header">
      <div class="bundle-badge">🔥 Limited Time Bundle Offer</div>
      <h1 class="bundle-title">{{ product.title }}</h1>
      <div class="bundle-subtitle">The Perfect Combination for Your Style</div>
      <div class="bundle-description">{{ product.description | strip_html | truncate: 300 }}</div>
    </div>
    
    <div class="bundle-products-section">
      <div class="products-grid">
        {% comment %} 
          Try multiple methods to get the actual bundle products
        {% endcomment %}
        
        {% comment %} Method 1: Check for bundle app metafields {% endcomment %}
        {% if product.metafields.bundle_products %}
          {% for bundle_item in product.metafields.bundle_products.value %}
            <div class="product-card">
              <img src="{{ bundle_item.featured_image | img_url: '240x240' }}" alt="{{ bundle_item.title }}" class="product-image">
              <div class="product-name">{{ bundle_item.title }}</div>
              <div class="product-price">{{ bundle_item.price | money }}</div>
              <div class="product-sku">{{ bundle_item.sku }}</div>
            </div>
          {% endfor %}
        
        {% comment %} Method 2: Check for custom metafields {% endcomment %}
        {% elsif product.metafields.custom.bundle_products %}
          {% assign bundle_product_ids = product.metafields.custom.bundle_products.value %}
          {% for product_id in bundle_product_ids %}
            {% assign bundle_item = product_id | product %}
            {% if bundle_item %}
              <div class="product-card">
                <img src="{{ bundle_item.featured_image | img_url: '240x240' }}" alt="{{ bundle_item.title }}" class="product-image">
                <div class="product-name">{{ bundle_item.title }}</div>
                <div class="product-price">{{ bundle_item.price | money }}</div>
                <div class="product-sku">{{ bundle_item.sku }}</div>
              </div>
            {% endif %}
          {% endfor %}
        
        {% comment %} Method 3: Check for SKU metafields {% endcomment %}
        {% elsif product.metafields.custom.bundle_skus %}
          {% assign bundle_skus = product.metafields.custom.bundle_skus.value | split: ',' %}
          {% for sku in bundle_skus %}
            {% assign bundle_item = collections.all.products | where: 'sku', sku | first %}
            {% if bundle_item %}
              <div class="product-card">
                <img src="{{ bundle_item.featured_image | img_url: '240x240' }}" alt="{{ bundle_item.title }}" class="product-image">
                <div class="product-name">{{ bundle_item.title }}</div>
                <div class="product-price">{{ bundle_item.price | money }}</div>
                <div class="product-sku">{{ bundle_item.sku }}</div>
              </div>
            {% endif %}
          {% endfor %}
        
        {% comment %} Method 4: Check for related products in same collection {% endcomment %}
        {% elsif product.collections.size > 0 %}
          {% assign bundle_collection = product.collections.first %}
          {% assign related_products = bundle_collection.products | where: 'id', '!=', product.id %}
          {% for related_product in related_products limit: 3 %}
            <div class="product-card">
              <img src="{{ related_product.featured_image | img_url: '240x240' }}" alt="{{ related_product.title }}" class="product-image">
              <div class="product-name">{{ related_product.title }}</div>
              <div class="product-price">{{ related_product.price | money }}</div>
              <div class="product-sku">{{ related_product.sku }}</div>
            </div>
          {% endfor %}
        
        {% comment %} Method 5: Check for products with similar tags {% endcomment %}
        {% elsif product.tags.size > 0 %}
          {% assign bundle_tag = product.tags.first %}
          {% assign tagged_products = collections.all.products | where: 'tags', bundle_tag %}
          {% for tagged_product in tagged_products limit: 3 %}
            {% unless tagged_product.id == product.id %}
              <div class="product-card">
                <img src="{{ tagged_product.featured_image | img_url: '240x240' }}" alt="{{ tagged_product.title }}" class="product-image">
                <div class="product-name">{{ tagged_product.title }}</div>
                <div class="product-price">{{ tagged_product.price | money }}</div>
                <div class="product-sku">{{ tagged_product.sku }}</div>
              </div>
            {% endunless %}
          {% endfor %}
        
        {% comment %} Method 6: Debug - show what we have {% endcomment %}
        {% else %}
          <div class="product-card" style="grid-column: 1 / -1; background: rgba(231, 76, 60, 0.1); border: 2px dashed #e74c3c;">
            <h3 style="color: #e74c3c; margin-bottom: 20px;">🔍 Bundle Products Not Found</h3>
            <p style="color: #2c3e50; margin-bottom: 15px;"><strong>Product ID:</strong> {{ product.id }}</p>
            <p style="color: #2c3e50; margin-bottom: 15px;"><strong>Product SKU:</strong> {{ product.sku }}</p>
            <p style="color: #2c3e50; margin-bottom: 15px;"><strong>Product Tags:</strong> {{ product.tags | join: ', ' }}</p>
            <p style="color: #2c3e50; margin-bottom: 15px;"><strong>Collections:</strong> {{ product.collections | map: 'title' | join: ', ' }}</p>
            <p style="color: #2c3e50;"><strong>Metafields:</strong> {{ product.metafields | json }}</p>
          </div>
        {% endif %}
      </div>
    </div>
    
    <div class="pricing-section">
      <div class="price-comparison">
        <span class="original-price">AED 377</span>
        <span class="bundle-price">{{ product.price | money_without_currency }}</span>
      </div>
      <div class="savings-badge">Save AED {{ 377 | minus: product.price | money_without_currency }} ({{ 377 | minus: product.price | money_without_currency | times: 100 | divided_by: 377 }}% OFF)</div>
    </div>
    
    <div class="cta-section">
      {% form 'product', product %}
        <button type="submit" class="bundle-cta">
          Get My Bundle Now - {{ product.price | money }}
        </button>
      {% endform %}
      <div class="free-shipping-badge">🚚 FREE SHIPPING INCLUDED</div>
    </div>
  </div>
</div>

