{% comment %}
  Bundle Product Hero Section v4.0.0 - Uses actual bundle product connections
  Version: v4.0.0 - Connects to real bundle product and its associated products
{% endcomment %}

<style>
  .bundle-hero {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }
  
  .bundle-hero .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .bundle-hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }
  
  .bundle-badge {
    display: inline-block;
    background: linear-gradient(45deg, #ff6b6b, #ee5a24);
    color: white;
    padding: 12px 24px;
    border-radius: 30px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 24px;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  .bundle-title {
    font-size: 4rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 20px;
    color: #2c3e50;
  }
  
  .bundle-subtitle {
    font-size: 1.5rem;
    color: #7f8c8d;
    margin-bottom: 20px;
    font-weight: 500;
  }
  
  .bundle-description {
    font-size: 1.2rem;
    color: #95a5a6;
    line-height: 1.6;
    margin-bottom: 40px;
  }
  
  .bundle-pricing {
    background: white;
    border-radius: 25px;
    padding: 40px;
    box-shadow: 0 25px 50px rgba(0,0,0,0.1);
    margin-bottom: 40px;
    border: 3px solid #f8f9fa;
  }
  
  .pricing-header {
    text-align: center;
    margin-bottom: 30px;
  }
  
  .pricing-title {
    font-size: 1.4rem;
    color: #2c3e50;
    margin-bottom: 15px;
    font-weight: 700;
  }
  
  .price-comparison {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 25px;
  }
  
  .original-price {
    font-size: 1.8rem;
    color: #bdc3c7;
    text-decoration: line-through;
    font-weight: 500;
  }
  
  .bundle-price {
    font-size: 3.5rem;
    font-weight: 900;
    color: #e74c3c;
  }
  
  .savings-badge {
    background: linear-gradient(45deg, #3498db, #2980b9);
    color: white;
    padding: 12px 20px;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: 700;
    display: inline-block;
  }
  
  .bundle-products {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 25px;
    margin-bottom: 40px;
  }
  
  .product-item {
    text-align: center;
    padding: 25px 20px;
    background: linear-gradient(135deg, #f8f9fa, #ffffff);
    border-radius: 20px;
    border: 2px solid #ecf0f1;
    transition: all 0.4s ease;
  }
  
  .product-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    border-color: #e74c3c;
  }
  
  .product-image {
    width: 100px;
    height: 100px;
    border-radius: 15px;
    margin: 0 auto 20px;
    object-fit: cover;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
  }
  
  .product-name {
    font-size: 1rem;
    color: #2c3e50;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 8px;
  }
  
  .product-price {
    font-size: 0.9rem;
    color: #27ae60;
    font-weight: 600;
  }
  
  .cta-section {
    text-align: center;
  }
  
  .bundle-cta {
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    color: white;
    padding: 25px 50px;
    border: none;
    border-radius: 50px;
    font-size: 1.4rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.4s ease;
    box-shadow: 0 15px 35px rgba(231, 76, 60, 0.4);
    width: 100%;
    max-width: 450px;
  }
  
  .bundle-cta:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 45px rgba(231, 76, 60, 0.5);
  }
  
  .free-shipping-badge {
    background: linear-gradient(45deg, #27ae60, #229954);
    color: white;
    padding: 15px 25px;
    border-radius: 30px;
    font-size: 1rem;
    font-weight: 700;
    display: inline-block;
    margin-top: 25px;
  }
  
  .bundle-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }
  
  .bundle-mockup {
    display: flex;
    align-items: center;
    gap: 30px;
    font-size: 5rem;
    animation: float 4s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-25px); }
  }
  
  .mockup-product {
    background: white;
    padding: 40px;
    border-radius: 25px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    transition: all 0.4s ease;
  }
  
  .mockup-product:hover {
    transform: scale(1.15);
  }
  
  .plus-sign, .equals-sign {
    font-size: 4rem;
    color: #e74c3c;
    font-weight: bold;
  }
  
  .bundle-result {
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    padding: 40px;
    border-radius: 25px;
    box-shadow: 0 20px 40px rgba(231, 76, 60, 0.4);
    animation: pulse 2s infinite;
  }
  
  @media (max-width: 768px) {
    .bundle-hero-content {
      grid-template-columns: 1fr;
      gap: 50px;
      text-align: center;
    }
    
    .bundle-title {
      font-size: 2.8rem;
    }
    
    .bundle-price {
      font-size: 2.8rem;
    }
    
    .bundle-products {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="bundle-hero">
  <div class="container">
    <div class="bundle-hero-content">
      <div class="bundle-hero-left">
        <div class="bundle-badge">üî• Limited Time Offer</div>
        <h1 class="bundle-title">{{ product.title }}</h1>
        <div class="bundle-subtitle">The Perfect Combination for Daily Style</div>
        <div class="bundle-description">{{ product.description | strip_html | truncate: 200 }}</div>
        
        <div class="bundle-pricing">
          <div class="pricing-header">
            <div class="pricing-title">Bundle Deal</div>
            <div class="price-comparison">
              <span class="original-price">AED 377</span>
              <span class="bundle-price">{{ product.price | money_without_currency }}</span>
            </div>
            <div class="savings-badge">Save AED {{ 377 | minus: product.price | money_without_currency }} ({{ 377 | minus: product.price | money_without_currency | times: 100 | divided_by: 377 }}% OFF)</div>
          </div>
          
          <div class="bundle-products">
            {% comment %} 
              Method 1: Check if product has metafields for bundle products
            {% endcomment %}
            {% if product.metafields.custom.bundle_products %}
              {% assign bundle_product_ids = product.metafields.custom.bundle_products.value %}
              {% for product_id in bundle_product_ids %}
                {% assign bundle_item = product_id | product %}
                {% if bundle_item %}
                  <div class="product-item">
                    <img src="{{ bundle_item.featured_image | img_url: '200x200' }}" alt="{{ bundle_item.title }}" class="product-image">
                    <div class="product-name">{{ bundle_item.title }}</div>
                    <div class="product-price">{{ bundle_item.price | money }}</div>
                  </div>
                {% endif %}
              {% endfor %}
            {% elsif product.metafields.custom.bundle_skus %}
              {% comment %} 
                Method 2: Check if product has SKUs in metafields
              {% endcomment %}
              {% assign bundle_skus = product.metafields.custom.bundle_skus.value | split: ',' %}
              {% for sku in bundle_skus %}
                {% assign bundle_item = collections.all.products | where: 'sku', sku | first %}
                {% if bundle_item %}
                  <div class="product-item">
                    <img src="{{ bundle_item.featured_image | img_url: '200x200' }}" alt="{{ bundle_item.title }}" class="product-image">
                    <div class="product-name">{{ bundle_item.title }}</div>
                    <div class="product-price">{{ bundle_item.price | money }}</div>
                  </div>
                {% endif %}
              {% endfor %}
            {% elsif product.tags contains 'bundle' %}
              {% comment %} 
                Method 3: Look for products with similar tags or in same collection
              {% endcomment %}
              {% assign bundle_collection = collections[product.collections.first.handle] %}
              {% if bundle_collection %}
                {% for related_product in bundle_collection.products limit: 3 %}
                  {% unless related_product.id == product.id %}
                    <div class="product-item">
                      <img src="{{ related_product.featured_image | img_url: '200x200' }}" alt="{{ related_product.title }}" class="product-image">
                      <div class="product-name">{{ related_product.title }}</div>
                      <div class="product-price">{{ related_product.price | money }}</div>
                    </div>
                  {% endunless %}
                {% endfor %}
              {% endif %}
            {% else %}
              {% comment %} 
                Method 4: Fallback - show placeholder products
              {% endcomment %}
              {% for i in (1..3) %}
                <div class="product-item">
                  <div class="product-image" style="background: linear-gradient(45deg, #ecf0f1, #bdc3c7); display: flex; align-items: center; justify-content: center; font-size: 3rem; color: #7f8c8d;">
                    {% case i %}
                      {% when 1 %}üëï
                      {% when 2 %}üëñ
                      {% when 3 %}üëü
                    {% endcase %}
                  </div>
                  <div class="product-name">Bundle Item {{ i }}</div>
                  <div class="product-price">Included</div>
                </div>
              {% endfor %}
            {% endif %}
          </div>
          
          <div class="cta-section">
            {% form 'product', product %}
              <button type="submit" class="bundle-cta">
                Get My Bundle Now - {{ product.price | money }}
              </button>
            {% endform %}
            <div class="free-shipping-badge">üöö FREE SHIPPING INCLUDED</div>
          </div>
        </div>
      </div>
      
      <div class="bundle-hero-right">
        <div class="bundle-visual">
          <div class="bundle-mockup">
            <div class="mockup-product">üëï</div>
            <div class="plus-sign">+</div>
            <div class="mockup-product">üëñ</div>
            <div class="plus-sign">+</div>
            <div class="mockup-product">üëü</div>
            <div class="equals-sign">=</div>
            <div class="bundle-result">üéÅ</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Bundle Product Hero v4",
  "class": "section-bundle-product-hero-v4",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    }
  ],
  "presets": [
    {
      "name": "Bundle Product Hero v4"
    }
  ]
}
{% endschema %}
