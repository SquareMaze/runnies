{% comment %}
  Custom Bundle Hero Section - Tag-based bundle system
  Version: 1.0.0 - Simple, reliable bundle system using product tags
{% endcomment %}

<style>
  .custom-bundle-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 100px 0;
    position: relative;
    overflow: hidden;
    color: white;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }
  
  .custom-bundle-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    opacity: 0.3;
  }
  
  .bundle-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }
  
  .bundle-header {
    text-align: center;
    margin-bottom: 80px;
  }
  
  .bundle-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 15px 30px;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  .bundle-title {
    font-size: 5rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 30px;
    text-shadow: 0 4px 8px rgba(0,0,0,0.3);
  }
  
  .bundle-subtitle {
    font-size: 1.8rem;
    margin-bottom: 30px;
    opacity: 0.9;
    font-weight: 300;
  }
  
  .bundle-description {
    font-size: 1.3rem;
    line-height: 1.6;
    margin-bottom: 50px;
    opacity: 0.8;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .bundle-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 80px;
    align-items: start;
  }
  
  .products-section {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 30px;
    padding: 50px;
    backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
  }
  
  .product-card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 25px;
    padding: 30px;
    text-align: center;
    transition: all 0.4s ease;
    border: 3px solid transparent;
    position: relative;
    overflow: hidden;
  }
  
  .product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
    transition: left 0.6s;
  }
  
  .product-card:hover::before {
    left: 100%;
  }
  
  .product-card:hover {
    transform: translateY(-15px) scale(1.02);
    box-shadow: 0 30px 60px rgba(0,0,0,0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }
  
  .product-image {
    width: 120px;
    height: 120px;
    border-radius: 20px;
    margin: 0 auto 25px;
    object-fit: cover;
    box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
  }
  
  .product-card:hover .product-image {
    transform: scale(1.1);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
  }
  
  .product-name {
    font-size: 1.3rem;
    color: #2c3e50;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.3;
  }
  
  .product-price {
    font-size: 1.1rem;
    color: #27ae60;
    font-weight: 600;
    margin-bottom: 10px;
  }
  
  .product-sku {
    font-size: 0.9rem;
    color: #7f8c8d;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .pricing-section {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 30px;
    padding: 50px;
    text-align: center;
    backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    position: sticky;
    top: 100px;
  }
  
  .pricing-title {
    font-size: 1.5rem;
    margin-bottom: 30px;
    font-weight: 600;
  }
  
  .price-comparison {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }
  
  .original-price {
    font-size: 2rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: line-through;
    font-weight: 300;
  }
  
  .bundle-price {
    font-size: 3.5rem;
    font-weight: 900;
    color: white;
    text-shadow: 0 4px 8px rgba(0,0,0,0.3);
  }
  
  .savings-badge {
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    color: white;
    padding: 15px 30px;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 700;
    display: inline-block;
    box-shadow: 0 10px 30px rgba(231, 76, 60, 0.4);
    margin-bottom: 40px;
  }
  
  .bundle-cta {
    background: linear-gradient(45deg, #f39c12, #e67e22);
    color: white;
    padding: 25px 50px;
    border: none;
    border-radius: 60px;
    font-size: 1.5rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    cursor: pointer;
    transition: all 0.4s ease;
    box-shadow: 0 20px 40px rgba(243, 156, 18, 0.4);
    width: 100%;
    position: relative;
    overflow: hidden;
  }
  
  .bundle-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.6s;
  }
  
  .bundle-cta:hover::before {
    left: 100%;
  }
  
  .bundle-cta:hover {
    transform: translateY(-5px);
    box-shadow: 0 25px 50px rgba(243, 156, 18, 0.6);
  }
  
  .free-shipping-badge {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 15px 25px;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 700;
    display: inline-block;
    margin-top: 25px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
  }
  
  .bundle-features {
    margin-top: 30px;
    text-align: left;
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    font-size: 1rem;
  }
  
  .feature-icon {
    margin-right: 15px;
    font-size: 1.2rem;
  }
  
  @media (max-width: 768px) {
    .custom-bundle-hero {
      padding: 60px 0;
      min-height: auto;
    }
    
    .bundle-title {
      font-size: 3rem;
    }
    
    .bundle-subtitle {
      font-size: 1.4rem;
    }
    
    .bundle-description {
      font-size: 1.1rem;
    }
    
    .bundle-content {
      grid-template-columns: 1fr;
      gap: 50px;
    }
    
    .products-grid {
      grid-template-columns: 1fr;
    }
    
    .bundle-price {
      font-size: 2.5rem;
    }
    
    .original-price {
      font-size: 1.5rem;
    }
    
    .bundle-cta {
      padding: 20px 30px;
      font-size: 1.2rem;
    }
    
    .pricing-section {
      position: static;
    }
  }
</style>

<div class="custom-bundle-hero">
  <div class="bundle-container">
    <div class="bundle-header">
      <div class="bundle-badge">üî• Limited Time Bundle Offer</div>
      <h1 class="bundle-title">Everyday Bundle</h1>
      <div class="bundle-subtitle">The Perfect Combination for Your Daily Style</div>
      <div class="bundle-description">Get everything you need for your everyday look with this exclusive bundle. Save big and enjoy free shipping!</div>
    </div>
    
    <div class="bundle-content">
      <div class="products-section">
        <div class="products-grid">
          {% comment %} Get products tagged with 'bundle-everyday' - try multiple methods {% endcomment %}
          {% assign bundle_products = collections.all.products | where: 'tags', 'bundle-everyday' %}
          
          {% comment %} Debug: Show all products and their tags {% endcomment %}
          {% if bundle_products.size == 0 %}
            {% assign all_products = collections.all.products %}
            {% for debug_product in all_products limit: 10 %}
              <!-- Debug: {{ debug_product.title }} - Tags: {{ debug_product.tags | join: ', ' }} -->
            {% endfor %}
          {% endif %}
          
          {% if bundle_products.size > 0 %}
            {% for bundle_product in bundle_products limit: 3 %}
              <div class="product-card">
                <img src="{{ bundle_product.featured_image | img_url: '240x240' }}" alt="{{ bundle_product.title }}" class="product-image">
                <div class="product-name">{{ bundle_product.title }}</div>
                <div class="product-price">{{ bundle_product.price | money }}</div>
                <div class="product-sku">{{ bundle_product.sku }}</div>
              </div>
            {% endfor %}
          {% else %}
            <div class="product-card" style="grid-column: 1 / -1; background: rgba(231, 76, 60, 0.1); border: 2px dashed #e74c3c;">
              <h3 style="color: #e74c3c; margin-bottom: 20px;">üîç No Bundle Products Found</h3>
              <p style="color: #2c3e50; margin-bottom: 15px;">To set up your bundle:</p>
              <ol style="color: #2c3e50; text-align: left; max-width: 400px; margin: 0 auto;">
                <li>Go to your 3 products in Shopify Admin</li>
                <li>Add the tag <strong>'bundle-everyday'</strong> to each product</li>
                <li>Save the products</li>
                <li>Refresh this page</li>
              </ol>
            </div>
          {% endif %}
        </div>
      </div>
      
      <div class="pricing-section">
        <div class="pricing-title">Bundle Deal</div>
        <div class="price-comparison">
          <span class="original-price">AED 377</span>
          <span class="bundle-price">AED 250</span>
        </div>
        <div class="savings-badge">Save AED 127 (34% OFF)</div>
        
        <button class="bundle-cta" onclick="addBundleToCart()">
          Get My Bundle Now - AED 250
        </button>
        
        <div class="free-shipping-badge">üöö FREE SHIPPING INCLUDED</div>
        
        <div class="bundle-features">
          <div class="feature-item">
            <span class="feature-icon">‚úÖ</span>
            <span>Free Shipping</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">‚úÖ</span>
            <span>30-Day Returns</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">‚úÖ</span>
            <span>Premium Quality</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">‚úÖ</span>
            <span>Secure Checkout</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{ 'custom-bundle.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Custom Bundle Hero",
  "class": "section-custom-bundle-hero",
  "settings": [
    {
      "type": "text",
      "id": "bundle_tag",
      "label": "Bundle Tag",
      "default": "bundle-everyday",
      "info": "Tag your products with this tag to include them in the bundle"
    },
    {
      "type": "text",
      "id": "bundle_title",
      "label": "Bundle Title",
      "default": "Everyday Bundle"
    },
    {
      "type": "text",
      "id": "bundle_price",
      "label": "Bundle Price",
      "default": "250"
    },
    {
      "type": "text",
      "id": "original_price",
      "label": "Original Price",
      "default": "377"
    }
  ],
  "presets": [
    {
      "name": "Custom Bundle Hero"
    }
  ]
}
{% endschema %}
