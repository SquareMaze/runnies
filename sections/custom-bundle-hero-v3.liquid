{% comment %}
  Custom Bundle Hero Section v3.0.0 - Uses custom metafields
  Version: 3.0.0 - Reliable metafield-based bundle system
{% endcomment %}

<style>
  .custom-bundle-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 100px 0;
    position: relative;
    overflow: hidden;
    color: white;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }
  
  .custom-bundle-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    opacity: 0.3;
  }
  
  .bundle-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }
  
  .bundle-header {
    text-align: center;
    margin-bottom: 80px;
  }
  
  .bundle-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 15px 30px;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  .bundle-title {
    font-size: 5rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 30px;
    text-shadow: 0 4px 8px rgba(0,0,0,0.3);
  }
  
  .bundle-subtitle {
    font-size: 1.8rem;
    margin-bottom: 30px;
    opacity: 0.9;
    font-weight: 300;
  }
  
  .bundle-description {
    font-size: 1.3rem;
    line-height: 1.6;
    margin-bottom: 50px;
    opacity: 0.8;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .bundle-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 80px;
    align-items: start;
  }
  
  .products-section {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 30px;
    padding: 50px;
    backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
  }
  
  .product-card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 25px;
    padding: 30px;
    text-align: center;
    transition: all 0.4s ease;
    border: 3px solid transparent;
    position: relative;
    overflow: hidden;
  }
  
  .product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
    transition: left 0.6s;
  }
  
  .product-card:hover::before {
    left: 100%;
  }
  
  .product-card:hover {
    transform: translateY(-15px) scale(1.02);
    box-shadow: 0 30px 60px rgba(0,0,0,0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }
  
  .product-image {
    width: 120px;
    height: 120px;
    border-radius: 20px;
    margin: 0 auto 25px;
    object-fit: cover;
    box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
  }
  
  .product-card:hover .product-image {
    transform: scale(1.1);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
  }
  
  .product-name {
    font-size: 1.3rem;
    color: #2c3e50;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.3;
  }
  
  .product-price {
    font-size: 1.1rem;
    color: #27ae60;
    font-weight: 600;
    margin-bottom: 10px;
  }
  
  .product-sku {
    font-size: 0.9rem;
    color: #7f8c8d;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .pricing-section {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 30px;
    padding: 50px;
    text-align: center;
    backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    position: sticky;
    top: 100px;
  }
  
  .pricing-title {
    font-size: 1.5rem;
    margin-bottom: 30px;
    font-weight: 600;
  }
  
  .price-comparison {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }
  
  .original-price {
    font-size: 2rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: line-through;
    font-weight: 300;
  }
  
  .bundle-price {
    font-size: 3.5rem;
    font-weight: 900;
    color: white;
    text-shadow: 0 4px 8px rgba(0,0,0,0.3);
  }
  
  .savings-badge {
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    color: white;
    padding: 15px 30px;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 700;
    display: inline-block;
    box-shadow: 0 10px 30px rgba(231, 76, 60, 0.4);
    margin-bottom: 40px;
  }
  
  .bundle-cta {
    background: linear-gradient(45deg, #f39c12, #e67e22);
    color: white;
    padding: 25px 50px;
    border: none;
    border-radius: 60px;
    font-size: 1.5rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    cursor: pointer;
    transition: all 0.4s ease;
    box-shadow: 0 20px 40px rgba(243, 156, 18, 0.4);
    width: 100%;
    position: relative;
    overflow: hidden;
    text-decoration: none;
    display: inline-block;
  }
  
  .bundle-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.6s;
  }
  
  .bundle-cta:hover::before {
    left: 100%;
  }
  
  .bundle-cta:hover {
    transform: translateY(-5px);
    box-shadow: 0 25px 50px rgba(243, 156, 18, 0.6);
    color: white;
    text-decoration: none;
  }
  
  .free-shipping-badge {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 15px 25px;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 700;
    display: inline-block;
    margin-top: 25px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
  }
  
  .bundle-features {
    margin-top: 30px;
    text-align: left;
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    font-size: 1rem;
  }
  
  .feature-icon {
    margin-right: 15px;
    font-size: 1.2rem;
  }
  
  .setup-instructions {
    background: rgba(52, 152, 219, 0.1);
    border: 2px solid #3498db;
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 30px;
  }
  
  .setup-instructions h3 {
    color: #3498db;
    margin-bottom: 20px;
    font-size: 1.5rem;
  }
  
  .setup-instructions ol {
    color: #2c3e50;
    text-align: left;
    max-width: 500px;
    margin: 0 auto;
  }
  
  .setup-instructions li {
    margin-bottom: 10px;
    font-size: 1.1rem;
  }
  
  .setup-instructions strong {
    color: #e74c3c;
  }
  
  @media (max-width: 768px) {
    .custom-bundle-hero {
      padding: 60px 0;
      min-height: auto;
    }
    
    .bundle-title {
      font-size: 3rem;
    }
    
    .bundle-subtitle {
      font-size: 1.4rem;
    }
    
    .bundle-description {
      font-size: 1.1rem;
    }
    
    .bundle-content {
      grid-template-columns: 1fr;
      gap: 50px;
    }
    
    .products-grid {
      grid-template-columns: 1fr;
    }
    
    .bundle-price {
      font-size: 2.5rem;
    }
    
    .original-price {
      font-size: 1.5rem;
    }
    
    .bundle-cta {
      padding: 20px 30px;
      font-size: 1.2rem;
    }
    
    .pricing-section {
      position: static;
    }
  }
</style>

<div class="custom-bundle-hero">
  <div class="bundle-container">
    <div class="bundle-header">
      <div class="bundle-badge">ðŸ”¥ Limited Time Bundle Offer</div>
      <h1 class="bundle-title">{{ section.settings.bundle_title | default: 'Everyday Bundle' }}</h1>
      <div class="bundle-subtitle">The Perfect Combination for Your Daily Style</div>
      <div class="bundle-description">Get everything you need for your everyday look with this exclusive bundle. Save big and enjoy free shipping!</div>
    </div>
    
    <div class="bundle-content">
      <div class="products-section">
        <div class="products-grid">
          {% comment %} Get products using custom metafields {% endcomment %}
          {% assign bundle_products = '' | split: ',' %}
          
          {% comment %} Method 1: Check for custom metafield with product handles {% endcomment %}
          {% if section.settings.bundle_product_1 != blank %}
            {% assign product_1 = all_products[section.settings.bundle_product_1] %}
            {% if product_1 %}
              {% assign bundle_products = bundle_products | concat: product_1 %}
            {% endif %}
          {% endif %}
          
          {% if section.settings.bundle_product_2 != blank %}
            {% assign product_2 = all_products[section.settings.bundle_product_2] %}
            {% if product_2 %}
              {% assign bundle_products = bundle_products | concat: product_2 %}
            {% endif %}
          {% endif %}
          
          {% if section.settings.bundle_product_3 != blank %}
            {% assign product_3 = all_products[section.settings.bundle_product_3] %}
            {% if product_3 %}
              {% assign bundle_products = bundle_products | concat: product_3 %}
            {% endif %}
          {% endif %}
          
          {% if bundle_products.size > 0 %}
            {% for bundle_product in bundle_products %}
              <div class="product-card">
                <img src="{{ bundle_product.featured_image | img_url: '240x240' }}" alt="{{ bundle_product.title }}" class="product-image">
                <div class="product-name">{{ bundle_product.title }}</div>
                <div class="product-price">{{ bundle_product.price | money }}</div>
                <div class="product-sku">{{ bundle_product.sku }}</div>
              </div>
            {% endfor %}
          {% else %}
            <div class="setup-instructions">
              <h3>ðŸš€ Set Up Your Bundle Products</h3>
              <p style="color: #2c3e50; margin-bottom: 20px; font-size: 1.1rem;">To display your bundle products, you need to configure them in the section settings:</p>
              <ol>
                <li>Go to <strong>Shopify Admin â†’ Online Store â†’ Themes â†’ Customize</strong></li>
                <li>Find this page and click on the <strong>"Custom Bundle Hero v3"</strong> section</li>
                <li>In the settings, enter the <strong>product handles</strong> for your 3 bundle products</li>
                <li>Product handles are the URL part after <code>/products/</code></li>
                <li>For example: if your product URL is <code>/products/premium-tshirt</code>, the handle is <code>premium-tshirt</code></li>
                <li>Save the settings and refresh this page</li>
              </ol>
              <p style="color: #e74c3c; font-weight: 600; margin-top: 20px;">Current Settings:</p>
              <ul style="color: #2c3e50; text-align: left;">
                <li>Product 1: <strong>{{ section.settings.bundle_product_1 | default: 'Not set' }}</strong></li>
                <li>Product 2: <strong>{{ section.settings.bundle_product_2 | default: 'Not set' }}</strong></li>
                <li>Product 3: <strong>{{ section.settings.bundle_product_3 | default: 'Not set' }}</strong></li>
              </ul>
            </div>
          {% endif %}
        </div>
      </div>
      
      <div class="pricing-section">
        <div class="pricing-title">Bundle Deal</div>
        <div class="price-comparison">
          <span class="original-price">AED {{ section.settings.original_price | default: '377' }}</span>
          <span class="bundle-price">AED {{ section.settings.bundle_price | default: '250' }}</span>
        </div>
        <div class="savings-badge">Save AED {{ section.settings.original_price | minus: section.settings.bundle_price | default: '127' }} ({{ section.settings.original_price | minus: section.settings.bundle_price | times: 100 | divided_by: section.settings.original_price | default: '34' }}% OFF)</div>
        
        {% comment %} Use the actual bundle product's buy button {% endcomment %}
        {% assign bundle_product_handle = section.settings.bundle_product_handle %}
        {% if bundle_product_handle %}
          {% assign bundle_product = all_products[bundle_product_handle] %}
          {% if bundle_product %}
            <a href="{{ bundle_product.url }}" class="bundle-cta">
              Get My Bundle Now - {{ bundle_product.price | money }}
            </a>
          {% else %}
            <button class="bundle-cta" onclick="alert('Bundle product not found. Please check the product handle in section settings.')">
              Get My Bundle Now - AED {{ section.settings.bundle_price | default: '250' }}
            </button>
          {% endif %}
        {% else %}
          <button class="bundle-cta" onclick="alert('Please set the bundle product handle in section settings.')">
            Get My Bundle Now - AED {{ section.settings.bundle_price | default: '250' }}
          </button>
        {% endif %}
        
        <div class="free-shipping-badge">ðŸšš FREE SHIPPING INCLUDED</div>
        
        <div class="bundle-features">
          <div class="feature-item">
            <span class="feature-icon">âœ…</span>
            <span>Free Shipping</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">âœ…</span>
            <span>30-Day Returns</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">âœ…</span>
            <span>Premium Quality</span>
          </div>
          <div class="feature-item">
            <span class="feature-icon">âœ…</span>
            <span>Secure Checkout</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Bundle Hero v3",
  "class": "section-custom-bundle-hero-v3",
  "settings": [
    {
      "type": "text",
      "id": "bundle_title",
      "label": "Bundle Title",
      "default": "Everyday Bundle"
    },
    {
      "type": "text",
      "id": "bundle_price",
      "label": "Bundle Price",
      "default": "250"
    },
    {
      "type": "text",
      "id": "original_price",
      "label": "Original Price",
      "default": "377"
    },
    {
      "type": "text",
      "id": "bundle_product_handle",
      "label": "Bundle Product Handle",
      "info": "Enter the handle of your bundle product (e.g., 'everyday-bundle')"
    },
    {
      "type": "header",
      "content": "Bundle Products"
    },
    {
      "type": "text",
      "id": "bundle_product_1",
      "label": "Product 1 Handle",
      "info": "Enter the product handle (URL part after /products/)"
    },
    {
      "type": "text",
      "id": "bundle_product_2",
      "label": "Product 2 Handle",
      "info": "Enter the product handle (URL part after /products/)"
    },
    {
      "type": "text",
      "id": "bundle_product_3",
      "label": "Product 3 Handle",
      "info": "Enter the product handle (URL part after /products/)"
    }
  ],
  "presets": [
    {
      "name": "Custom Bundle Hero v3"
    }
  ]
}
{% endschema %}
